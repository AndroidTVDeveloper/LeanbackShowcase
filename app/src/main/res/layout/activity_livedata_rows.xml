<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_livedata_fragment"
        android:name="androidx.leanback.leanbackshowcase.app.room.controller.overview.LiveDataFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.room.controller.overview.LiveDataRowsActivity"
        tools:deviceIds="tv"
        tools:ignore="MergeRootFrame" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/no_internet"
        android:visibility="gone"
        android:padding="12dip"

        android:background="#AA000000"
        android:textColor="#ffffffff"

        android:text="Offline Browsing" />

</merge>
